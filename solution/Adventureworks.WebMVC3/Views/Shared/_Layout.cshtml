@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
   
    <!-- <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/ui-darkness/jquery-ui-1.8.9.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui.min.js")" type="text/javascript"></script> -->

    <!-- Switching out link and script calls for Web.Optimization script blocks to make the most of resource request constraints -->
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/ui-darkness")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery-ui")
    
    <script type="text/javascript">
        $(document).ready(function () {
            adjustMidColWidth();

            $(window).resize(function () {
                adjustMidColWidth();
            });
        });

        function adjustMidColWidth() {
            $("div.master-wrapper-center").width($(window).width() - 410);
            $("master-wrapper-cph").width($(window).width() - 435);
        }
    </script>
</head>
<body>
    <div class="master-wrapper-page">
        <div class="master-wrapper-content">
            <div class="header">
                <div class="header-logo">
                    @{
                        #if Full
                            <text><a class="logo">&nbsp; </a></text>
                        #endif
                    }
                </div>
                @Html.Partial("_LogOnPartial")
            </div>
            <div class="headermenu">
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Admin", "Index", "Admin")</li>
                    <li>@Html.ActionLink("Purchasing", "Index", "Purchasing")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </div>
            <div class="master-wrapper-leftside">
                <div class="block block-category-navigation">
                    @{Html.RenderAction("Index", "Category");}
                </div>
            </div>
            <div class="master-wrapper-center">
                <div class="master-wrapper-cph">
                    @RenderBody()
                </div>
            </div>
            <div class="master-wrapper-rightside">
                <div class="block-shoppingcart">
                    <div class="title">
                        Shopping Cart
                    </div>
                    <div class="clear">
                    </div>
                    <table id="bookingsList">
                        <tbody>
                            <tr class="cart">
                                <td class="cart-false" colspan="4">
                                    <span class="text">0 items in Cart...</span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="footer">
            <div class="footer-disclaimer">
                built with <a href="http://asp.net/mvc">ASP.NET MVC 3</a>
                <p>Originally developed by <a href="http://www.codeplex.com/site/users/view/supertigerzou">supertigerzou</a></p>
                <p>Updated by <a href="http://www.codeplex.com/site/users/view/Bishops_move">Bishops_move</a></p></div>
        </div>
    </div>
</body>
</html>
